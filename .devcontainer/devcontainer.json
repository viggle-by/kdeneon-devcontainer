{
  "name": "KDE Neon Dev Container",
  "image": "invent-registry.kde.org/neon/docker-images/plasma:unstable",
  "extensions": [
    // Add any VS Code extensions you need for your project here
  ],
  "remoteUser": "neon",
  // Optional: Mount your source code directory
  "mounts": [
    "source=${workspaceFolder},target=/home/neon/src,type=bind,consistency=cached"
  ],
  // Optional: Command to run after the container is created
  "postCreateCommand": "uname -a"
}
